<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_user">

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.geofencing.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.geofencing.ui.dashboard.MapsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.geofencing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_addChildFragment"
            app:destination="@id/addChildFragment" />
    </fragment>
    <fragment
        android:id="@+id/addChildFragment"
        android:name="com.example.geofencing.ui.home.AddChildFragment"
        android:label="@string/add_child"
        tools:layout="@layout/fragment_add_child" />
</navigation>